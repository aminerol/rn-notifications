<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wix.reactnativenotifications"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

<!--      Permissions required for enabling FCM. -->
    <permission
        android:name="dollar_openBracket_applicationId_closeBracket.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="dollar_openBracket_applicationId_closeBracket.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application>

<!--          A proxy-service that gives the library an opportunity to do some work before launching/resuming the actual application task. -->
        <service android:name="com.wix.reactnativenotifications.core.ProxyService" />
        <service android:name="com.wix.reactnativenotifications.fcm.FcmInstanceIdListenerService" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.wix.reactnativenotifications.fcm.FcmInstanceIdRefreshHandlerService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver android:name="com.wix.reactnativenotifications.core.notification.PushNotificationPublisher" />
    </application>

</manifest>